    <style name="MediaDetailsChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/on_background_38</item>
        <item name="chipBackgroundColor">@color/background</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/on_background_60</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="colorControlNormal">@color/secondary</item>
        <item name="colorControlActivated">@color/secondary</item>
    </style>

    <style name="ShapeAppearanceOverlay_bottom_sheet" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/on_background_60
        </item> <!-- Change the text color to red -->
        <item name="chipStrokeColor">@color/on_background_38
        </item> <!-- Change the border color to green -->
        <item name="chipStrokeWidth">1dp</item> <!-- Set the border width to 2dp -->
    </style>

    <style name="circleShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

