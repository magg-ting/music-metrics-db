<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--region Font-->
    <style name="TextStyle">
        <item name="android:textDirection">locale</item>
    </style>

    <!--region Title-Font-->
    <style name="TextStyle.TitleLarge">
        <item name="android:textSize">@dimen/text_giant</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/heading_margin_top</item>
        <item name="android:paddingHorizontal">@dimen/heading_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/heading_padding_bottom</item>
    </style>

    <style name="TextStyle.CarouselItem">
        <item name="android:layout_width">@dimen/carousel_item_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.CarouselItem.SongTitle">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/carousel_title_spacing</item>
    </style>

    <style name="TextStyle.CarouselItem.ArtistName">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.SongItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.SongItem.SongTitle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/carousel_title_spacing</item>
    </style>

    <style name="TextStyle.SongItem.ArtistName">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.SongDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.SongDetail.SongTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">@dimen/text_giant</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/carousel_title_spacing</item>
    </style>

    <style name="TextStyle.SongDetail.ArtistName">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextStyle.HelpText">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_marginTop">@dimen/heading_margin_top</item>
        <item name="android:paddingHorizontal">@dimen/heading_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/heading_padding_bottom</item>
    </style>

    <style name="TextStyle.HyperlinkText">
        <item name="android:textColor">@color/hyperlink</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.HyperlinkText.LoginSignupPrompt">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_16dp</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium_16dp</item>
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.ProfileNavItem">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_field</item>
        <item name="android:paddingStart">@dimen/spacing_large_24dp</item>
        <item name="android:paddingEnd">@dimen/spacing_medium_16dp</item>
        <item name="android:background">@drawable/custom_card_background</item>
        <item name="android:drawablePadding">@dimen/spacing_small_8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/spacing_small_8dp</item>
        <item name="android:textColor">@color/on_background_60</item>
        <item name="drawableStartCompat">@drawable/ic_bookmark</item>
        <item name="drawableTint">@color/on_background_60</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextStyle.TitleMedium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextStyle.TitleSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <!--endregion-->

    <!--region Body-Font-->
    <style name="TextStyle.BodyLarge">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextStyle.BodySmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <!--endregion-->

    <!--region label-Font-->
    <style name="TextStyle.LabelLarge">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextStyle.LabelBody">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextStyle.LabelSmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <!--    endregion-->

    <!--    region caption-->
    <style name="TextStyle.Caption">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <!--    endregion-->

<!--    endregion-->

<!--    region styles-->
    <style name="ViewDividerStyle">
        <item name="android:radius">@dimen/radius_full</item>
    </style>

    <style name="BottomNavigation">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/bottom_navigation_background</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextAppearanceActive">@style/TextStyle.TitleSmall.ItemTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/TextStyle.TitleSmall.ItemTextAppearanceInactive</item>
    </style>

    <style name="TextStyle.TitleSmall.ItemTextAppearanceActive">
        <item name="itemTextColor">@color/on_background_87</item>
    </style>

    <style name="TextStyle.TitleSmall.ItemTextAppearanceInactive">
        <item name="itemTextColor">@color/on_background_38</item>
    </style>

    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_navigation_indicator</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="boxStrokeColor">@color/on_background_38</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
    </style>

    <style name="LoginSignupTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="boxStrokeColor">@color/on_background_38</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_medium_16dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8dp</item>
    </style>

    <style name="PrimaryButton" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAppearance">@style/TextStyle.TitleSmall</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/button_retry</item>
    </style>

    <style name="PrimaryButton.ReturnHomeButton" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/back_btn_size</item>
        <item name="android:layout_height">@dimen/back_btn_size</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/arrow_left</item>
        <item name="tint">@color/on_background_87</item>
    </style>

    <style name="TextStyle.BodyMedium.TextInputEditTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/on_background_60</item>
        <item name="android:textColorHint">@color/on_background_60</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:drawableTint">@color/on_background_60</item>
        <item name="boxBackgroundColor">@drawable/edittext_background</item>
    </style>


    <style name="TextStyle.BodyMedium.SearchBoxStyle">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">search</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">16sp</item>
    </style>

    <style name="TextStyle.BodySmall.ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">@dimen/spacing_medium_16dp</item>
        <item name="chipEndPadding">@dimen/spacing_medium_16dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="AddToListChipStyle" parent="TextStyle.BodySmall.ChipStyle">
        <item name="android:textColor">@color/add_to_list_text_color</item>
    </style>

    <style name="DetailsChipStyle" parent="TextStyle.BodySmall.ChipStyle">
        <item name="android:textColor">@color/on_background_60</item>
        <item name="chipBackgroundColor">@color/background</item>
        <item name="strokeColor">@color/on_background_38</item>
    </style>
<!--    endregion-->

<!--    Region Image -->
    <style name="ImageStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageStyle.Carousel">
        <item name="android:layout_width">@dimen/carousel_item_size</item>
        <item name="android:layout_height">@dimen/carousel_item_size</item>
    </style>

    <style name="ImageStyle.SongItem">
        <item name="android:layout_width">@dimen/song_item_size</item>
        <item name="android:layout_height">@dimen/song_item_size</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium_16dp</item>
    </style>

    <style name="ImageStyle.SongDetail">
        <item name="android:layout_width">@dimen/song_detail_size</item>
        <item name="android:layout_height">@dimen/song_detail_size</item>
        <item name="android:padding">@dimen/spacing_medium_16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ImageStyle.AlbumDetail">
        <item name="android:layout_width">@dimen/album_detail_size</item>
        <item name="android:layout_height">@dimen/album_detail_size</item>
        <item name="android:padding">@dimen/spacing_medium_16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--    endregion-->
</resources>