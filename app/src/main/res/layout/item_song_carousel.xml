<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/carousel_item_padding">

    <ImageView
        style="@style/ImageStyle.Carousel"
        android:id="@+id/album_image"
        android:src="@drawable/default_album_cover" />

    <TextView
        style="@style/TextStyle.CarouselItem.SongTitle"
        android:id="@+id/track_name"
        android:text="Track Name" />

    <TextView
        style="@style/TextStyle.CarouselItem.ArtistName"
        android:id="@+id/artist_name"
        android:text="Artist Name" />

</LinearLayout>
